                        }
                    ],
                    iDisplayLength: 5,
                    responsive: true,
                    bFilter: true,
                    bPaginate: true,
                    bLengthChange: false,
                    bInfo: false,
                    bAutoWidth: false,
                    dom: "<'row'<'col-sm-12 col-md-12 my-3'f>>" +
                        "<'row'<'col-sm-12'tr>>" +
                        "<'row'<'col-sm-12 col-md-12 my-3'p>>",
                });
            }
